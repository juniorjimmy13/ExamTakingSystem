<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ETP.ExamTakingSystem.UI.QuestionManagementController" alignment="center" hgap="10" vgap="10">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Manage Questions" GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.columnSpan="2" />
    
    <TableView fx:id="questionTable" GridPane.columnIndex="0" GridPane.rowIndex="1">
        <columns>
            <TableColumn fx:id="questionTextColumn" text="Question" />
        </columns>
    </TableView>
    
    <VBox spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="1">
        <Button fx:id="addQuestionBtn" text="Add Question" />
        <Button fx:id="deleteQuestionBtn" text="Delete Question" />
    </VBox>
</GridPane>
